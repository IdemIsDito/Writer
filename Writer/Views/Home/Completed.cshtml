@using System.Web.Optimization
<!DOCTYPE html>
<html>
    <head>
        <title>SIMA - Writer</title>
        
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <meta name="format-detection" content="telephone=no"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        
        <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-landscape.png" media="(orientation:landscape)" />
        <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-portrait.png" media="(orientation:portrait)" />
        <link rel="apple-touch-icon" href="~/Content/images/icon.png"/>
        @Styles.Render("~/Content/css")
    </head>
	<body>
		<img class="img-responsive" src="@Url.Content("~/Content/images/completed-img.jpg")" title="Deze inzending is al afgerond." />
		<div class="container">
			<div class="row">
				<div class="col-xs-12 col-sm-8 col-sm-offset-2">
					<h1 class="page-header">Deze inzending is al afgerond.</h1>
					<p>De inzending kan niet meer worden gewijzigd. Heb je nog geen inzending gedaan?</p>
					<a class="btn btn-default" href="@(ViewBag.SiteRoot)">Start hier!</a>
				</div>
			</div>
		</div>
	</body>
</html>